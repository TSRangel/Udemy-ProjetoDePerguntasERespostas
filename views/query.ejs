<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header.ejs')%>
</head>
<body>
    <%- include('partials/nav.ejs')%>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form action="/answersended" method="POST">
            <h3>Responda</h3>
            <label for="corpo">Resposta:</label>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea>
            <br>
            <input type="hidden" value="<%= pergunta.id %>" name="pergunta">
            <button class="btn btn-dark">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <br>
        <%}) %>
    </div>
</body>
<%- include('partials/footer.ejs')%>
</html>