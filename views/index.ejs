<!DOCTYPE html>
<html lang="en">

<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/nav.ejs') %>
            <div class="container">

                <h1>Perguntas</h1>
                <hr>
                <a href="/queries" class="btn btn-dark">Perguntar</a>
                <hr>
                <% perguntas.forEach(pergunta=> {%>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3>
                                <%= pergunta.titulo %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/queries/<%= pergunta.id %>"><button class="btn btn-dark">Responder</button></a>
                        </div>
                    </div>
                    <%})%>
            </div>
    </body>

    <%- include ('partials/footer.ejs') %>

</html>